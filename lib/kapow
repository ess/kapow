KAPOW_LIB="/Users/dan/Code/kapow/lib/"
KAPOW_FORMULAE="http://github.com/danryan/kapow/"


do_install() {
	echo "Installing $1..."	
}

do_remove() {
	echo "Removing $1..."
}

do_search() {
	echo "Searching for $1..."
}

die() {
  echo -e "kapow error:  $1" 1>&2
  exit 255
}

require() {
  source "$KAPOW_LIB$1" || die "File could not be read or does not exist."
}

